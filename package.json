{
  "name": "pomodoro-session",
  "displayName": "Pomodoro Session",
  "description": "A VSCode extension to manage Pomodoro sessions, set timers, and block distractions.",
  "version": "0.0.1",
  "publisher": "carlosmab",
  "engines": {
    "vscode": "^1.98.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pomodoro.setup",
        "title": "Setup Pomodoro Session"
      }
    ],
    "configuration": {
        "type": "object",
        "properties": {
            "pomodoro.workDuration": {
                "type": "number",
                "default": 25,
                "description": "Work duration in minutes."
            },
            "pomodoro.shortBreakDuration": {
                "type": "number",
                "default": 5,
                "description": "Short break duration in minutes."
            },
            "pomodoro.longBreakDuration": {
                "type": "number",
                "default": 15,
                "description": "Long break duration in minutes."
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/extension.test.js"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/vscode": "^1.99.1",
    "typescript": "^5.8.3",
    "vscode": "^1.1.37",
    "vscode-test": "^1.6.1"
  }
}
