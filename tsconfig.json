{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts", // Include all files in src
        "test/**/*.ts" // Include all files in test
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}